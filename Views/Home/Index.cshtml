@model WeatherAPI.Models.WeatherModel

@{

    ViewData["Title"] = "Weather Explorer!";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="GetWeather">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Lon" class="control-label"></label>
                <input asp-for="Lon" class="form-control" />
                <span asp-validation-for="Weather" class="text-danger"></span>
            </div><br>
            <div class="form-group">
                <label asp-for="Lat" class="control-label"></label>
                <input asp-for="Lat" class="form-control" />
                <span asp-validation-for="Weather" class="text-danger"></span>
            </div><br>
            <div class="form-group">
                <input type="submit" value="Search..." class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Weather)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Weather)
    </dd>
</div>
